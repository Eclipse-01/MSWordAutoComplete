{
  "name": "ms-word-autocomplete",
  "version": "1.0.0",
  "description": "为 Microsoft Word 提供类似 GitHub Copilot 的智能补全功能（第三方插件）",
  "author": "Eclipse-01",
  "main": "electron-main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eclipse-01/MSWordAutoComplete.git"
  },
  "license": "MIT",
  "config": {
    "app_to_debug": "word",
    "app_type_to_debug": "desktop",
    "dev_server_port": 3000
  },
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev-server": "webpack serve --mode development",
    "lint": "office-addin-lint check",
    "lint:fix": "office-addin-lint fix",
    "prettier": "office-addin-lint prettier",
    "signin": "office-addin-dev-settings m365-account login",
    "signout": "office-addin-dev-settings m365-account logout",
    "start": "office-addin-debugging start manifest.xml",
    "stop": "office-addin-debugging stop manifest.xml",
    "validate": "office-addin-manifest validate manifest.xml",
    "watch": "webpack --mode development --watch",
    "electron:dev": "NODE_ENV=development electron electron-dev.js",
    "electron:start": "electron electron-main.js",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && npm run pack:manifest && node scripts/create-installers.js",
    "pack:manifest": "node scripts/pack-manifest.js",
    "postinstall": "node scripts/create-installers.js"
  },
  "dependencies": {
    "@fluentui/react": "^8.118.0",
    "@github/copilot-language-server": "^1.390.0",
    "axios": "^1.6.0",
    "core-js": "^3.36.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/office-js": "^1.0.377",
    "@types/office-runtime": "^1.0.35",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "archiver": "^6.0.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-updater": "^6.1.0",
    "eslint-plugin-office-addins": "^4.0.3",
    "file-loader": "^6.2.0",
    "html-loader": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "office-addin-cli": "^2.0.3",
    "office-addin-debugging": "^6.0.3",
    "office-addin-dev-certs": "^2.0.3",
    "office-addin-lint": "^3.0.3",
    "office-addin-manifest": "^2.0.3",
    "office-addin-prettier-config": "^2.0.1",
    "os-browserify": "^0.3.0",
    "process": "^0.11.10",
    "source-map-loader": "^5.0.0",
    "style-loader": "^4.0.0",
    "typescript": "^5.4.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "5.1.0"
  },
  "prettier": "office-addin-prettier-config",
  "browserslist": [
    "last 2 versions",
    "ie 11"
  ],
  "build": {
    "appId": "com.eclipse01.mswordautocomplete",
    "productName": "Word智能补全",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon-128.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon-128.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon-128.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Word智能补全"
    },
    "publish": {
      "provider": "github",
      "owner": "Eclipse-01",
      "repo": "MSWordAutoComplete"
    }
  }
}
